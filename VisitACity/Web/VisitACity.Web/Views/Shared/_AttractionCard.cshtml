@using VisitACity.Web.ViewModels.Attractions
@model AttractionViewModel
@{  
    var imagePath= $"~/images/Attractions/{Model.Images.FirstOrDefault().Id}.{Model.Images.FirstOrDefault().Extension}";
}
 <div class="media col-md-4">
    <img class="card-img-top" src="@Model.ImageUrl" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">@Model.Name</h5>
      <p class="card-text">@Model.Description</p>
    </div>
         <a class="btn btn-info" asp-controller="Attractions" asp-action="ById">         
             <div class="feature-icon">
              <i class="fa fa-info-circle"></i> <span>Details</span>
            </div>
         </a>
         <a class="btn btn-success" asp-controller="Plans" asp-action="ById">
                      <div class="feature-icon">
              <i class="fa fa-bus"></i> <span>Add to plan</span>
            </div>
         </a>   
    <div class="card-footer">
        <small class="text-muted bottom-0">Raiting: 0</small>
    </div>
  </div>