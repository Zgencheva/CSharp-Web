@using VisitACity.Web.ViewModels.Attractions
@model AttractionViewModel
@*@{
    var imagePath = $"~/images/Attractions/{Model.Images.FirstOrDefault().Id}.{Model.Images.FirstOrDefault().Extension}";
}*@
<div class="media col-md-4">
    <a asp-controller="Attractions" asp-action="Details" asp-route-id="@Model.Id">
        <img class="mr-3 img-responsive" width="400" height="300" src="@Model.ImageUrl" alt="Card image cap" />
    </a>
    <div class="card-body">
        <h4 class="card-title text-center">@Model.Name</h4>
        <p></p>
        <h5 class="card-text text-center">City: @Model.CityName</h5>
        <div class="card-text feature-icon">
            <i class="fa fa-dollar-sign"></i> <span>Price: @Model.Price</span>
        </div>
        <div class="card-text feature-icon">
            <i class="fa fa-search-location"></i> <span>Address: @Model.Address</span>
        </div>
        <p></p>

    </div>
    <div class="card-footer">
         <div class="card-text feature-icon">
            <i class="fa fa-eye"></i> <span>Revied by @Model.Reviews adventurers</span>
        </div>
    </div>
    <div class="text-center">
        <a class="btn btn-info" asp-controller="Attractions" asp-action="Details" asp-route-id="@Model.Id">
            <div class="feature-icon">
                <i class="fa fa-info-circle"></i> <span>Details</span>
            </div>
        </a>
        <a class="btn btn-success" asp-controller="Plans" asp-action="AddAttractionToPlan" asp-route-attractionId="@Model.Id">
            <div class="feature-icon">
                <i class="fa fa-bus"></i> <span>Add to plan</span>
            </div>
        </a>
    </div>
    <p></p>
</div>
