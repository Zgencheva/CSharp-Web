@using VisitACity.Web.ViewModels.Reviews
@model ReviewRestaurantViewModel

<div class="card col-md-6 offset-md-3">
    <div class="card-header row row-cols-lg-auto">
        <div class="ratings col-12">
            <div class="stars">
                @for (int i = 0; i < Model.Rating; i++)
                {
                    <i class="fa fa-star"></i>
                }
            </div>
        </div>
    </div>
    <div class="card-body">
         @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                <a class="btn btn-danger delete mb-2 fas fa-delete" data-id="@Model.Id" data-area="Administration" data-controller="Reviews" data-action="Delete" data-body-message="Are you sure you want to delete this comment?">
                    <i class="fas fa-trash"></i>
                    Delete
                </a>
            }
        <p class="blockquote">
            @Model.CreatedOn.ToShortDateString() by @ViewBag.UserFirstName
           
        </p>
        <figcaption class="blockquote-footer">
            @Model.Content
        </figcaption>
    </div>
</div>

