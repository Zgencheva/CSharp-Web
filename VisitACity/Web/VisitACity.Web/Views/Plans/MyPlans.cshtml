@model VisitACity.Web.ViewModels.Plans.UserPlansViewModel
@{
    this.ViewData["Title"] = "My plans";
}
@if (Model.Plans.Count() == 0)
{
    <partial name="_NoPlans" />
    ;
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">City</th>
                            <th scope="col">Country</th>
                            <th scope="col">From</th>
                            <th scope="col">To</th>
                            <th scope="col">Days</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Plans)
                        {
                            <partial name="_PlanPartial" , model="item" />
                            ;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

