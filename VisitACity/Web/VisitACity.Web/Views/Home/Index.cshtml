@using VisitACity.Common
@using VisitACity.Web.ViewModels.Home
@model IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<form>
    <div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <h2>Create Your Personal Travel Guide 
        <a href="\Plans\Create">Here</a>
    </h2>
    <h3 style="margin-top:50px"; class="display-12">Where are you travelling to?</h3>
   <div class="container">
   <div class="input-group" style="margin-top:50px">
        <input type="text" class="form-control py-2" value="" placeholder="City" />
      <button class="btn btn-outline-primary border-right-0 border" 
         type="button">Search</button>
    </div>
</div>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="attractionsOption" id="attractionsOption" value="attractionsOption" checked>
  <label class="form-check-label" for="exampleRadios1">
    Attractions
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="RestaurantsOption" id="RestaurantsOption" value="RestaurantsOption">
  <label class="form-check-label" for="exampleRadios2">
    Restaurants
  </label>
</div>
</form>

<div class="h-10 d-inline-block, container" style="position:absolute; background-color: whitesmoke">
  <div class="row">
    <div class="col-sm">
    @Model.CitiesCount Cities
    </div>
    <div class="col-sm">
      @Model.AttractionsCount Attractions
    </div>
    <div class="col-sm">
      @Model.RestaurantCount Restaurants
    </div>
  </div>
</div>