@using VisitACity.Common
@using VisitACity.Web.ViewModels.Home
@model IndexViewModel
@{
    this.ViewData["Title"] = "Home Page, page" + Model.AttractionList.PageNumber;
}

<form>
    <div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <h2>Create Your Personal Travel Guide 
        <a asp-controller="Plans" asp-action="Create">Here</a>
    </h2>
    <h3 style="margin-top:50px"; class="display-12">Where are you travelling to?</h3>
   <div class="container">
   <div class="input-group" style="margin-top:50px">
        <input type="text" class="form-control py-2" name="cityName" placeholder="City in Bulgaria" />
      <button class="btn btn-outline-primary border-right-0 border" 
         type="button">Search</button>
    </div>
</div>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
  <label class="form-check-label" for="flexRadioDefault1">
    Attractions
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
  <label class="form-check-label" for="flexRadioDefault2">
    Restaurants
  </label>
</div>
</form>

<div class="h-10 d-inline-block, container" style="position:absolute; background-color: whitesmoke">
  <div class="row">
    <div class="col-sm">
    @Model.CitiesCount Cities
    </div>
    <div class="col-sm">
      @Model.AttractionsCount Attractions
    </div>
    <div class="col-sm">
      @Model.RestaurantCount Restaurants
    </div>
  </div>
</div>

<p></p>
<br/>
  <div class="card-group m">
@foreach (var attraction in this.Model.AttractionList.Attractions)
{
        <partial name="~/Views/Shared/_AttractionCard.cshtml", model = "attraction" />
}

 </div> 
 <hr />
<partial name="~/Views/Shared/_PagingPartial.cshtml" model="@Model.AttractionList" />