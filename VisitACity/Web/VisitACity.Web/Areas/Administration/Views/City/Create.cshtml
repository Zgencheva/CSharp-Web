@model VisitACity.Web.ViewModels.Administration.Cities.CityFormModel
@{
    this.ViewData["Title"] = "Create city";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div asp-validation-summary="All" class="text-danger"></div>
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="CountryId" class="form-label">Country</label>
                <select asp-for="CountryId" class="form-control">
                    @foreach (var country in Model.Countries)
                    {
                        <option value="@country.Id">@country.Name</option>
                    }
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>